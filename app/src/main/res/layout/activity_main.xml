<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <ImageView
        android:id="@+id/ivDisplayImage"
        android:layout_width="233dp"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/coc_logo" />

    <TextView
        android:id="@+id/codemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDisplayImage"
        android:layout_marginTop="40dp"
        android:text="CODEHUNT 2k19!"
        android:textColor="#76FF03"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="40sp"
        android:typeface="normal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codemain"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="Get Set Code!!!"
        android:textColor="#76FF03"
        android:textSize="25sp"
        android:textStyle="italic"
        android:typeface="normal" />

</RelativeLayout>